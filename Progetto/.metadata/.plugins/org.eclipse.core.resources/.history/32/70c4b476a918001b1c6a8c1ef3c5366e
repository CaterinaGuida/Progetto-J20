/* Oggetto di accesso al database per la verifica dell'identità di un controllore */
package dao;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.text.SimpleDateFormat;

public class DaoLoger {

	private DaoFactory Dao;
	

	public DaoLoger(DaoFactory Dao){
		super();
		this.Dao=Dao;
		
	}
	
	public boolean login(String username,String password) {
		
		Connection con;
		try {
			con = Dao.getConnection();
			Statement st= con.createStatement();
			String query=String.format("select count(*) as number from users where username='%s'",username); 
			ResultSet result= st.executeQuery(query);
			int number=0;
			while(result.next()) {
				number= result.getInt("number");
			}
			if (number>0) {
				query=String.format("select *  from users where username='%s'",username); 
				result= st.executeQuery(query);
				while(result.next()) {
					String passe= result.getString("password");
					if(passe.equals(password)) {
						return true;
					}
					return false;
				}
				
			}
		}
		catch(SQLException e) {
			e.printStackTrace();
		}
		return false;
		
		
	}
}
