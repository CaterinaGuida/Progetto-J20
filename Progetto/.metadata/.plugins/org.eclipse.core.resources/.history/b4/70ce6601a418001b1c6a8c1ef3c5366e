package model;

import java.util.Date;

public class Pass extends TravelDocument{
	private String firstName;
	private String cognome;
	private Duration durata;

	public Pass(Duration durata, String firstName,String cognome) {
		super();
		this.firstName=firstName;
		this.cognome=cognome;
		this.durata= durata;
		this.expirarionDate= (Date) this.purchaseDate.clone();
		
		if(durata== Duration.SETTIMANALE)
			this.expirarionDate.setDate(this.purchaseDate.getDate()+7);
		
		if(durata== Duration.MENSILE)
		
			this.expirarionDate.setMonth(this.purchaseDate.getMonth()+1);
		
		if(durata== Duration.ANNUALE)
			
			this.expirarionDate.setYear(this.purchaseDate.getYear()+1);
		
	}

	public String getNome() {
		return firstName;
	}

	public void setNome(String firstName) {
		this.firstName = firstName;
	}

	public String getCognome() {
		return cognome;
	}

	public void setCognome(String cognome) {
		this.cognome = cognome;
	}

	public Duration getDurata() {
		return durata;
	}

	public void setDurata(Duration durata) {
		this.durata = durata;
	}
	
}
